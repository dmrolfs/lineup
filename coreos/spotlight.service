[Unit]
Description=Spotlight
After=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill spotlight
ExecStartPre=-/usr/bin/docker rm spotlight
ExecStartPre=/usr/bin/docker pull dmrolfs/spotlight-core
ExecStart=/usr/bin/docker run --rm --name spotlight -p 20400:2004 -v /var/log/spotlight:/var/log -v /etc/spotlight:/etc/spotlight dmrolfs/spotlight-core
ExecStop=-/usr/bin/docker stop spotlight

[Install]
WantedBy=multi-user.target