<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern> -->
      <!--<pattern>%date [%thread] %-5level %logger{36} - %message%n</pattern>-->
      <pattern>[%-5level] [%d{HH:mm:ss.SSS}] [%thread] [%logger{36}] %message%n</pattern>
    </encoder>
  </appender>

  <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/var/log/testFile-${bySecond}.log</file>
    <append>true</append>
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <!--<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>-->
      <pattern>[%-5level] [%-4relative] [%thread] [%logger{35}] %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="STATS_DUMP" class="ch.qos.logback.core.FileAppender">
    <file>/var/log/stats-${bySecond}.log</file>
    <append>true</append>
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <logger name="RawStats" level="INFO" additivity="false">
    <appender-ref ref="STATS_DUMP" />
  </logger>

  <!--<root level="WARN">-->
  <root level="INFO">
  <!--<root level="DEBUG">-->
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
